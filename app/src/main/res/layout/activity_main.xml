            android:layout_height="@dimen/spinner_button_height"
            android:layout_weight="1"
            android:onClick="increaseHundreds"
            android:text="^" />

        <Button
            android:layout_width="@dimen/spinner_button_width"
            android:layout_height="@dimen/spinner_button_height"
            android:layout_weight="1"
            android:onClick="increaseTens"
            android:text="^" />

        <Button
            android:layout_width="@dimen/spinner_button_width"
            android:layout_height="@dimen/spinner_button_height"
            android:layout_weight="1"
            android:onClick="increaseUnits"
            android:text="^" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: centre and resize digits -->

        <TextView
            android:id="@+id/thousands"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/hundreds"
