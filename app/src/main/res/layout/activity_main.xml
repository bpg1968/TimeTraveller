        <!-- TODO: get better "down" symbols -->

        <Button
            android:layout_width="@dimen/spinner_button_width"
            android:layout_height="@dimen/spinner_button_height"
            android:layout_weight="1"
            android:onClick="decreaseThousands"
            android:text="v" />

        <Button
            android:layout_width="@dimen/spinner_button_width"
            android:layout_height="@dimen/spinner_button_height"
            android:layout_weight="1"
            android:onClick="decreaseHundreds"
            android:text="v" />

